
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signup'} ) do |f| %>

  <h2>Đăng nhập</h2>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
    <br />
    <%= f.label :password, class:'sr-only' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Mật khẩu' %>

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me, class: 'checkbox', style: 'float:left;' %>
      <%= f.label :remember_me, value: 'Ghi nhớ tài khoản', style: 'float: left; padding-left: 10px;' %>
  <% end -%>

  <div class="actions">
    <%= f.submit "Đăng nhập", class:'btn btn-lg btn-info btn-block' %>
  </div>

  <br />
    <%= link_to "Quên mật khẩu?", new_user_password_path %>
<% end %>


