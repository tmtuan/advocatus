<!DOCTYPE html>
<html>
  <head>
    <title>Mentor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!-- Navigation Bar -->
  <nav class="navbar navbar-fixed-top navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to educators_index_path, class: "navbar-brand" do %>
            <%= image_tag "logo.png",  class: "brand-logo" %>
        <% end %>
      </div>

      <div>
        <div class="col-sm-6 col-md-6">
          <form class="navbar-form" role="search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search" name="q" size="100" id="search_bar">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Mentors", educators_index_path %></li>
          <% if !user_signed_in? %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% else %>
              <li><%= link_to current_user.email, "#" %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method =>  :delete %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>



  <div class="container-fluid">


    <% if notice %>
        <div id="notice_wrapper">
          <p class="alert alert-success"><%= notice %></p>
        </div>
    <% elsif alert %>
        <div id="notice_wrapper">
          <p class="alert alert-warning"><%= alert %></p>
        </div>
    <% end %>

    <%= yield %>
  </div>

  <script>
    $(document).ready(function() {
      setTimeout(function() {
        $('#notice_wrapper').fadeOut("slow", function() {
          $(this).remove();
        });
      }, 4000);
    });

  </script>
  </body>
</html>
